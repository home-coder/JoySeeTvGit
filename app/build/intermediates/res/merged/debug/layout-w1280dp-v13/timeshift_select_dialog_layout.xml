<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="453dp"
    android:layout_height="298dp"
    android:background="@drawable/exit_dialog_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="424dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/time_shift_dialog_title"
        android:textColor="@color/text"
        android:textSize="26sp" />
    <Button
        android:id="@+id/play_previous_btn"
        android:layout_width="228dip"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/play_previous"
        android:textSize="26sp" />

    <Button
        android:id="@+id/play_next_btn"
        android:layout_width="228dip"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/play_next"
        android:textSize="26sp" 
        />
    <Button
        android:id="@+id/stop_play_btn"
        android:layout_width="228dip"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/stop_play"
        android:textSize="26sp" 
        />
    <Button
        android:id="@+id/cancle_btn"
        android:layout_width="228dip"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/time_shift_cancel"
        android:textSize="26sp" 
        android:layout_marginBottom="20dp"
        />

</LinearLayout>