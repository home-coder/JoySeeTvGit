        <TextView
            android:id="@+id/config_work_time_ens_edittext"
            android:layout_width="156dip"
            android:layout_height="33dip"
            android:layout_marginLeft="16dip"
            android:background="@drawable/search_et_selector"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:maxLength="2"
            android:numeric="integer"
            android:singleLine="true"
            android:drawableRight="@drawable/arrows_selector"
            android:paddingRight="7dp"
            android:textColor="@drawable/search_text_color"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:textColor="@color/white_txt"
            android:text="@string/config_work_time_second"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="53dip"
        android:layout_marginLeft="106dip"
        android:layout_marginTop="600dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/config_work_time_btn_save"
            android:layout_width="156dip"
            android:layout_height="40dip"
            android:gravity="center"
            android:text="@string/config_work_time_save_and_back"
            android:textSize="21sp" />

        <Button
            android:id="@+id/config_work_time_btn_cancel"
            android:layout_width="156dip"
            android:layout_height="40dip"
            android:layout_marginLeft="13dip"
            android:gravity="center"
            android:text="@string/config_modify_password_cancel"
            android:textSize="21sp" />
