<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="324dp"
    android:layout_height="982dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/psd_dialog_bg"
    android:id="@+id/config_dialog_layout"
    >
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="22dip"
        android:layout_gravity="left"
        android:orientation="horizontal"
        >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/program_reserve_alert_seconds"
	        android:textSize="40sp"
	        android:textColor="@color/black"
	        />
	    <TextView
	        android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/program_reserve_alert_text_dismiss_window_text"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="982dip"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:drawableLeft="@drawable/program_alert_clock"
	        android:drawablePadding="25dp"
	        android:id="@+id/program_reserve_alert_channel_name"
	        android:textSize="40sp"
	        android:textColor="@color/green_txt"
	        />
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="40dp"
	        android:singleLine="true"
	        android:id="@+id/program_reserve_alert_program_name"
	        android:textSize="40sp"
	        android:textColor="@color/green_txt"
	        />
	     <ImageView 
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="15dip"
 	        android:src="@drawable/search_settings_arrows_focus"
	        android:scaleType="fitXY"
	        android:id="@+id/program_reserve_alert_up"
	         />
	    
    </LinearLayout>
    <LinearLayout 
        android:layout_width="982dip"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
	    <Button 
	        android:layout_width="335dip"
	        android:layout_height="75dip"
	        android:text="@string/program_reserve_alert_watch_button_text"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:id="@+id/program_reserve_alert_button_watch"
	        />
	    <Button 
	        android:layout_width="335dip"
	        android:layout_height="75dip"
	        android:text="@string/program_reserve_alert_cancel_button_text"
	        android:layout_marginLeft="60dip"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:id="@+id/program_reserve_alert_button_cancel"
	        />
    </LinearLayout>
</LinearLayout>
