<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_menu_bg"
    android:id="@+id/config_authorise_message_bg">
   <TextView
        android:id="@+id/ca_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setting_back"
        android:drawablePadding="20dip"
        android:layout_marginTop="65dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="68dp"
        android:text="@string/ca_setting_title_text"
        android:textColor="@color/white_txt"
        android:textSize="46sp" />

    <TextView
        android:text="@string/ca_setting_author_info_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="123dp"
        android:textColor="@color/grey_txt"
        android:textSize="36sp" 
            />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/config_authorise_op_layout"
        android:layout_marginTop="290dip"
        android:layout_marginLeft="123dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="42sp"
            android:text="@string/config_authorise_operate_id"
            />
         <TextView
            android:id="@+id/config_authorise_operate_edit"
            android:layout_width="774dip"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="25dip"
            android:background="@drawable/search_et_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:drawableRight="@drawable/arrows_selector"
            android:textColor="@drawable/search_text_color"
            android:textSize="35sp"
             />
        <Spinner 
            android:id="@+id/config_authorise_spinner_id"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:drawSelectorOnTop="true"
            android:textColor="@color/text"
            android:dropDownSelector="@color/blue"
            android:popupBackground="#131723"
            android:dropDownVerticalOffset="1dip"
            android:visibility="gone"
            android:textSize="30sp"
            android:spinnerMode="dropdown"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dip"
        android:id="@+id/config_authorise_operate_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/config_authorise_op_layout"
        android:layout_below="@id/config_authorise_op_layout"
        android:singleLine="true"
        android:text="@string/config_authorise_operate_feature"
        android:textSize="42sp" />

    <LinearLayout 
        android:layout_width="1674dip"
        android:layout_height="56dip"
        android:layout_marginTop="50dip"
        android:id="@+id/config_authorise_title_layout"
        android:layout_below="@id/config_authorise_operate_feature"
        android:layout_alignLeft="@id/config_authorise_op_layout"
        android:gravity="center_vertical"
        android:background="#575757"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="550dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="32sp"
            android:textColor="@color/white_txt"
            android:id="@+id/config_auth_number"
            android:text="@string/config_authorise_program_number"
            />
        <TextView 
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="32sp"
            android:textColor="@color/white_txt"
            android:id="@+id/config_auth_end"
            android:text="@string/config_authorise_end_time"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="32sp"
            android:textColor="@color/white_txt"
            android:id="@+id/config_auth_record"
            android:text="@string/config_authorise_can_record"
            />
    </LinearLayout>
    
    <ListView
        android:id="@+id/config_authrise_listview"
        android:layout_width="1674dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/config_authorise_title_layout"
        android:layout_below="@id/config_authorise_title_layout"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="#2dffffff"
        android:dividerHeight="1dip"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:listSelector="@drawable/list_selector" >
    </ListView>

</RelativeLayout>
