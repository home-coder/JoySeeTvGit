    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="69dip"
        android:layout_marginLeft="125dip"
        android:layout_marginTop="843dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/config_work_time_btn_save"
            android:layout_width="335dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/config_work_time_save_and_back"
            android:textSize="40sp" />

        <Button
            android:id="@+id/config_work_time_btn_cancel"
            android:layout_width="335dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:gravity="center"
            android:text="@string/config_modify_password_cancel"
            android:textSize="40sp" />
