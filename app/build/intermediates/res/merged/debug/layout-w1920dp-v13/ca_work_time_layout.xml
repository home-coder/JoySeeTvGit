<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/config_work_time"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/search_menu_bg"
     >

   <TextView
        android:id="@+id/ca_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setting_back"
        android:drawablePadding="20dip"
        android:layout_marginTop="65dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="68dp"
        android:text="@string/ca_setting_title_text"
        android:textColor="@color/white_txt"
        android:textSize="46sp" />

    <TextView
        android:text="@string/ca_setting_work_time_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="123dp"
        android:textColor="@color/grey_txt"
        android:textSize="36sp" 
            />

    <LinearLayout
        android:id="@+id/config_work_time_start"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginLeft="123dip"
        android:layout_marginTop="282dip"
        android:orientation="horizontal" 
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_txt"
            android:textSize="42sp" 
            android:text="@string/config_work_time_start"/>

        <TextView
            android:id="@+id/config_work_time_sth_edittext"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:background="@drawable/search_et_selector"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:maxLength="2"
            android:singleLine="true"
            android:drawableRight="@drawable/arrows_selector"
            android:paddingRight="10dp"
            android:textColor="@drawable/search_text_color"
            android:textSize="36sp"
             />

            <!-- android:dropDownSelector="@drawable/ca_spinner_selector" -->
        <Spinner
            android:id="@+id/config_set_worktime_hour"
            android:layout_width="240dip"
            android:layout_height="50dip"
            android:layout_marginLeft="25dip"
            android:background="@drawable/search_et_selector"
            android:dropDownSelector="@drawable/search_spinner_item_selector"
            android:drawSelectorOnTop="true"
            android:dropDownVerticalOffset="1dip"
            android:focusable="true"
            android:spinnerMode="dropdown"
            android:textColor="@color/green_txt"
            android:popupBackground="@drawable/search_down_list_bg"
            android:visibility="gone"
            android:textSize="30sp" />

        <TextView
            android:textColor="@color/white_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="@string/config_work_time_hour"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/config_work_time_stm_edittext"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:background="@drawable/search_et_selector"
