<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_menu_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_menu_bg" >

        <TextView
            android:id="@+id/search_menu_title"
            android:layout_width="800dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="75dp"
            android:drawableLeft="@drawable/search_back"
            android:drawablePadding="28dp"
            android:text="@string/search_tv"
            android:textColor="#dddddd"
            android:textSize="46sp" >
        </TextView>
    <LinearLayout
        android:layout_width="1673dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="80dp" >


        <TextView
            android:layout_width="600dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/search_select_searh_mode"
            android:textColor="#787878"
            android:textSize="36sp" >
        </TextView>

        <View
            android:background="@color/devide_line"
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_height="1dp" />
        <!-- 快速搜索 -->

        <LinearLayout
            android:id="@+id/search_fast_search_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:focusable="true"
            android:onClick="onclick"
            android:orientation="horizontal" 
            android:paddingLeft="63dp"
            >

            <TextView
                android:id="@+id/search_fast_search_textview"
                android:layout_width="300dip"
                android:layout_height="90dip"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="@string/search_fast_search"
                android:textColor="@drawable/search_text_color"
                android:textSize="42sp" />

            <TextView
                android:layout_width="600dip"
                android:layout_height="90dip"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:paddingLeft="50dip"
                android:text="@string/search_fast_search_comment"
                android:textColor="@drawable/search_comment_color"
                android:textSize="26sp" />
        </LinearLayout>
        
        <View
            android:background="@color/devide_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <!-- 全频搜索 -->

        <LinearLayout
            android:id="@+id/search_all_search_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingLeft="63dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_all_search_textview"
                android:layout_width="300dip"
                android:layout_height="90dip"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:paddingRight="50dip"
                android:text="@string/search_all_search"
                android:textColor="@drawable/search_text_color"
                android:textSize="42sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="90dip"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:paddingLeft="50dip"
                android:text="@string/search_all_search_comment"
                android:textColor="@drawable/search_comment_color"
                android:textSize="26sp" />
        </LinearLayout>
        
        <View
            android:background="@color/devide_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />

        <!-- 手动搜索 -->

        <LinearLayout
            android:id="@+id/search_manual_search_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingLeft="63dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_manual_search_textview"
                android:layout_width="300dip"
                android:layout_height="90dip"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:paddingRight="50dip"
                android:text="@string/search_manual_search"
                android:textColor="@drawable/search_text_color"
                android:textSize="42sp" />

            <TextView
                android:layout_width="600dip"
                android:layout_height="90dip"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:paddingLeft="50dip"
                android:text="@string/search_manual_search_commnet"
                android:textColor="@drawable/search_comment_color"
                android:textSize="26sp" />
        </LinearLayout>
        
        <View
            android:background="@color/devide_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />

        <!--
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:focusable="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_resset_textview"
                android:layout_width="1200dip"
                android:layout_height="100dip"
                android:background="@drawable/text_selector"
                android:gravity="center_vertical"
                android:paddingLeft="50dip"
                android:paddingRight="50dip"
                android:text="@string/search_resset"
                android:textColor="@drawable/search_text_color"
                android:textSize="35sp" />
        </LinearLayout>
        -->
    </LinearLayout>

    <ImageView
        android:id="@+id/ivFocus"
        android:layout_width="1673dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/focus"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

</FrameLayout>