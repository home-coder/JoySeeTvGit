<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/public_dialog_bg"
    >
    
    <TextView
        android:id="@+id/epg_alert_title" 
        android:layout_width="660dp"
        android:layout_height="165dp"
        android:textColor="@color/epg_white_txt"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        />
    
    <View
        android:id="@+id/divide_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF" 
        android:layout_marginTop="165dp"
        />
    
    <Button
        android:id="@+id/epg_alert_confirm_btn"
        android:layout_width="203dip"
        android:layout_height="44dip"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="12dp"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_gravity="bottom|left"
        />
    
    <Button
        android:id="@+id/epg_alert_cancle_btn"
        android:layout_width="203dip"
        android:layout_height="44dip"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="12dp"
        android:text="@string/alert_dialog_cancel"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_gravity="bottom|right"
        />
</FrameLayout>