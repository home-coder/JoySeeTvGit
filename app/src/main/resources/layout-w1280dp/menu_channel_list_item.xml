<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_clitem_channel_info"
    android:layout_width="fill_parent"
    android:layout_height="65dp"
    android:orientation="vertical" >

    <!-- c = channel list item -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
    		<ImageView
    		    android:id="@+id/menu_clitem_channel_icon"
    		    android:layout_width="72dp"
    		    android:layout_height="54dp"
    		    android:layout_gravity="center_vertical"
    		    android:layout_marginLeft="5dp"
    		    android:scaleType="fitXY"
    		    android:src="@drawable/default_icon"
    		    />

            <!-- <TextView
                android:id="@+id/menu_clitem_channel_icon_text"
                android:layout_width="72dp"
                android:layout_height="54dp"
                android:textSize="32sp"
                android:gravity="center"
                android:textColor="@color/epg_white_txt"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dip"
                android:src="@drawable/default_icon" /> -->

            <TextView
                android:id="@+id/menu_clitem_channel_num"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:padding="0dp"
                android:singleLine="true"
                android:textColor="@drawable/text_color_selector"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/menu_clitem_channel_name"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:ellipsize="marquee"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="0dp"
                android:singleLine="true"
                android:textColor="@drawable/text_color_selector"
                android:textSize="30sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/menu_clitem_favorite_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:layout_gravity="left|center_vertical"
        	  android:layout_marginRight="5dp"
            android:src="@drawable/icon_favorite"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:visibility="invisible"
        android:id="@+id/devide_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#33FFFFFF" />

</LinearLayout>