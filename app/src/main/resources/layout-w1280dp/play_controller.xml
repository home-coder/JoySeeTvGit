<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_view_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    >
    <TextView
        android:id="@+id/play_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="306dp"
        android:includeFontPadding="false"
        android:textSize="27sp"
        android:textColor="#ffffff"
        android:text="@string/play"
        />
    <RelativeLayout
        android:id="@+id/control_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginRight="119dp"
        android:layout_below="@id/play_state_text"
        android:background="@drawable/control_layout_bg"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="70dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

	    <TextView
            android:id="@+id/program_name_text"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginLeft="66dp"
            android:singleLine="true"
            android:textSize="27sp"
            android:textColor="#ffffff"
            />
	    <TextView
            android:id="@+id/channel_name_text"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="27sp"
            android:layout_toRightOf="@id/program_name_text"
            android:layout_marginLeft="36dp"
            android:layout_alignBottom="@id/program_name_text"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/current_time_text"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="27sp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/program_name_text"
            android:layout_marginRight="32dp"
            android:textColor="#f0f0f0"
            android:includeFontPadding="false"
            android:singleLine="true"
            />
	    <LinearLayout android:id="@+id/seekBar_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/program_name_text"
            android:gravity="top"
            >
            <SeekBar android:id="@+id/seekBar"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:max="100"
	            android:progressDrawable="@drawable/progress_style_play"
	            android:thumb="@drawable/thumb"
	            android:layout_marginLeft="19dp"
	            android:layout_marginRight="5dp"
	            android:thumbOffset="0dp" 
	            android:maxHeight="6dp"  
	            android:minHeight="6dp" 
	            android:focusable="false"
	            />
        </LinearLayout> 
        
        <LinearLayout android:id="@+id/red_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar_layout"
            android:gravity="center"
            android:layout_marginLeft="66dp"
            >
		    <TextView 
		        android:id="@+id/red_textview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="12dp"
		        android:drawableLeft="@drawable/red_btn"
		        android:drawablePadding="12dp"
		        android:textSize="23sp"
		        android:text="@string/red_string"/>
		</LinearLayout>
	    
        <TextView 
            android:id="@+id/time_range_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_textview1"
            android:layout_below="@id/seekBar_layout"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/red_btn_layout"
            android:layout_alignBottom="@id/red_btn_layout"
            android:gravity="center_vertical"
            android:layout_marginRight="32dp"
            android:textSize="27sp"
            />
		<LinearLayout android:id="@+id/back_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/seekBar_layout"
            android:layout_alignLeft="@+id/channel_name_text"
            android:layout_alignTop="@id/red_btn_layout"
            android:layout_alignBottom="@id/red_btn_layout"
            android:gravity="center"
            android:visibility="invisible"
            >
	        <Button
	            android:id="@+id/back_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/back_btn_bg"
	            android:textColor="#ffffff"
	            android:gravity="center"
	            android:text="@string/alert_dialog_cancel" 
	            />
	        <TextView 
		        android:id="@+id/back_textview1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="12dp"
		        android:textSize="23sp"
		        android:text="@string/exit"/>
		</LinearLayout>
    </RelativeLayout>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/confirm_btn_bg"
        android:layout_marginLeft="119dp"
        android:layout_marginBottom="46dp"
        android:layout_marginTop="23dp"
        />
    <ImageView 
        android:id="@+id/play_pause_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play_pause"
        android:layout_marginLeft="184dp"
        android:layout_marginTop="87dp"
        />
    <ImageView 
        android:id="@+id/fast_back_head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fast_back_head"
        android:layout_marginLeft="186dp"
        android:layout_marginTop="147dp"
        />
    <ImageView 
        android:id="@+id/fast_forward_last_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fast_forward_last"
        android:layout_marginLeft="186dp"
        android:layout_marginTop="35dp"
        />
    <ImageView 
        android:id="@+id/fast_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fast_back"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="94dp"
        />
    <ImageView 
        android:id="@+id/fast_forward_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fast_forward"
        android:layout_marginLeft="242dp"
        android:layout_marginTop="94dp"
        />
</RelativeLayout>
