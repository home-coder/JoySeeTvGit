<?xml version="1.0" encoding="utf-8"?>
<com.joysee.adtv.ui.MenuChannelList xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" 
        android:background="@color/blue"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="invisible"
        />

    <ListView
        android:layout_marginTop="-2dp"
        android:id="@+id/menu_cl_list"
        android:layout_width="fill_parent"
        android:layout_height="449dp"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="#33FFFFFF"
        android:dividerHeight="1dp"
        android:nextFocusUp="@id/menu_cl_list"
        android:listSelector="@drawable/list_selector" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView                          
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"
            android:focusable="false"
            android:background="@drawable/left" />

        <!-- <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/right" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/channellist_guide"
            android:textColor="@color/white"
            android:textSize="27sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:focusable="false"
            android:background="@drawable/trun_page_right" />

        <!-- <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/trun_page_left" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/channlelist_trun_page"
            android:textColor="@color/white"
            android:textSize="27sp" />
    </LinearLayout>

</com.joysee.adtv.ui.MenuChannelList>
