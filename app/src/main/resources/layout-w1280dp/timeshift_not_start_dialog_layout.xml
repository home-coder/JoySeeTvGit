<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="453dp"
    android:layout_height="207dp"
    android:background="@drawable/exit_dialog_bg"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="424dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/time_shift_dialog_title"
        android:textColor="@color/text"
        android:textSize="26sp" />
    <TextView
        android:id="@+id/time_shift_text"
        android:layout_marginTop="10dp"
        android:layout_width="424dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/time_shift_hint"
        android:textColor="@color/text"
        android:textSize="26sp" />
    
    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:visibility="gone">
        <Button
            android:id="@+id/previous_btn"
            android:layout_width="228dip"
            android:layout_height="44dp"
            android:layout_marginLeft="60dip"
            android:gravity="center"
            android:text="@string/previous"
            android:textSize="26sp" />

        <Button
            android:layout_marginLeft="40dp"
            android:id="@+id/cancle_btn"
            android:layout_width="228dip"
            android:layout_height="44dp"
            android:layout_marginRight="41dip"
            android:gravity="center"
            android:text="@string/time_shift_cancel"
            android:textSize="26sp" />
        
    </LinearLayout>


</LinearLayout>