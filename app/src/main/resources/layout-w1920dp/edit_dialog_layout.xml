<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/psd_dialog_bg"
    android:id="@+id/config_dialog_layout"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="22dip"
        android:layout_gravity="left"
        android:id="@+id/config_dialog_text"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:text="@string/config_work_time_input_passward"
        />
    <LinearLayout 
        android:layout_width="982dip"
        android:layout_height="112dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        >
	    <EditText 
	        android:layout_width="780dip"
	        android:layout_height="75dip"
	        android:paddingLeft="22dip"
	        android:layout_marginTop="32dip"
	        android:id="@+id/config_dialog_eidt"
	        android:inputType="numberPassword"
	        android:maxLength="6"
	        android:textSize="40sp"
	        android:background="@drawable/search_et_selector"
	        android:textColor="@color/green_txt"
	        />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="22dip"
	        android:layout_marginTop="20dip"
	        android:singleLine="true"
	        android:drawableLeft="@drawable/ca_psd_wrong"
	        android:drawablePadding="15dp"
	        android:visibility="gone"
	        android:id="@+id/input_psd_wrong_txt"
	        android:textSize="40sp"
	        android:textColor="@color/green_txt"
	        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="982dip"
        android:layout_marginTop="27dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        >
	    <Button 
	        android:layout_width="335dip"
	        android:layout_height="75dip"
	        android:text="@string/email_dialog_positive_str"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:id="@+id/config_dialog_btn_confirm"
	        />
	    <Button 
	        android:layout_width="335dip"
	        android:layout_height="75dip"
	        android:text="@string/config_modify_password_cancel"
	        android:layout_marginLeft="60dip"
	        android:textSize="45sp"
	        android:gravity="center"
	        android:id="@+id/config_dialog_btn_cancel"
	        />
    </LinearLayout>
</LinearLayout>
