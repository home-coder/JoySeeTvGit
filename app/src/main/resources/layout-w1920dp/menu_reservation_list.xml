<?xml version="1.0" encoding="utf-8"?>
<com.joysee.adtv.ui.MenuReservationList xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
		
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:background="@drawable/menu_back" />

            <TextView
                android:id="@+id/menu_reservation_back_textview"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="@string/menu_reservation_back"
                android:textColor="#787878"
                android:textSize="28sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#5FFFFFFF" />

        <ListView
            android:id="@+id/menu_reservation_listview"
            android:layout_width="fill_parent"
            android:layout_height="728dp"
            android:background="@color/transparent"
            android:dividerHeight="1dp"
            android:divider="#33FFFFFF"
            android:fadingEdge="none"
            android:focusable="true"
            android:listSelector="@color/transparent"
            android:scrollbarThumbVertical="@drawable/scroll_front"
            android:scrollbarTrackVertical="@drawable/scroll_bg" >
        </ListView>
        <!-- android:listSelector="@drawable/program_reserves_list_selector" -->
    </LinearLayout>

    <ImageView
        android:id="@+id/ivFocus"
        android:layout_width="650dp"
        android:layout_height="145dp"
        android:background="@drawable/focus"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="invisible"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/progaram_reserve_no_channel_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="true"
        android:text="@string/program_reserve_no_program_text"
        android:textColor="@color/white"
        android:textSize="35sp" />

</com.joysee.adtv.ui.MenuReservationList>