<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notify_dialog_bg" >
    
    <TextView 
        android:layout_width="716dip"
        android:layout_height="113dip"
        android:text="@string/dvb_nochannel_notify_message"
		android:textColor="@color/search_main_text"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_gravity="top"
        />
    
    <Button
        android:id="@+id/dvb_nochannel_notify_cancle_btn"
        android:layout_width="200dip"
        android:layout_height="45dip"
        android:layout_marginRight="138dip"
        android:layout_marginBottom="30dip"
        android:text="@string/dvb_nochannel_notify_cancle_btn"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="bottom|right"
        />
    
	<Button
        android:id="@+id/dvb_nochannel_notify_search_btn"
        android:layout_width="200dip"
        android:layout_height="45dip"
        android:layout_marginLeft="138dip"
        android:layout_marginBottom="30dip"
        android:text="@string/dvb_nochannel_notify_search_btn"
        android:textSize="25sp"
        android:gravity="center"
		android:textColor="@color/white"
        android:layout_gravity="bottom|left"
        />
    

</FrameLayout>