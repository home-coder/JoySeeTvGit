<?xml version="1.0" encoding="utf-8"?>
<!-- 搜索、预约公用的Dialog -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/epg_alert_title" 
        android:layout_width="716dip"
        android:layout_height="113dip"
        android:text="@string/program_reverse_alert_message"
		android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        />
    
    <Button
        android:id="@+id/epg_alert_confirm_btn"
        android:layout_width="200dip"
        android:layout_height="45dip"
        android:layout_marginLeft="138dip"
        android:layout_marginBottom="30dip"
        android:text="@string/ok"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="bottom|left"
        />
    
	<Button
        android:id="@+id/epg_alert_cancle_btn"
        android:layout_width="200dip"
        android:layout_height="45dip"
        android:layout_marginRight="138dip"
        android:layout_marginBottom="30dip"
        android:text="@string/alert_dialog_cancel"
        android:textSize="25sp"
        android:gravity="center"
		android:textColor="@color/white"
        android:layout_gravity="bottom|right"
        />
</FrameLayout>