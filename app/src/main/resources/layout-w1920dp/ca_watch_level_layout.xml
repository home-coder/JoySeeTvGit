<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/search_menu_bg"
    android:id="@+id/config_watch_level">

   <TextView
        android:id="@+id/ca_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setting_back"
        android:drawablePadding="20dip"
        android:layout_marginTop="65dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="68dp"
        android:text="@string/ca_setting_title_text"
        android:textColor="@color/white_txt"
        android:textSize="46sp" />

    <TextView
        android:text="@string/ca_setting_watch_level_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="123dp"
        android:textColor="@color/grey_txt"
        android:textSize="36sp" 
            />

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="80dp"                                                                    
        android:layout_marginTop="290dip"
        android:layout_marginLeft="123dp"
        android:id="@+id/config_watch_level_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42sp"
            android:focusable="false"
            android:textColor="@color/white_txt"
            android:text="@string/config_watch_level_age"/>
        <TextView
            android:id="@+id/config_watch_level_edittext"
            android:layout_width="774dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:background="@drawable/search_et_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:maxLength="2"
            android:singleLine="true"
            android:drawableRight="@drawable/arrows_selector"
            android:paddingRight="10dp"
            android:textColor="@drawable/search_text_color"
            android:textSize="36sp"/>
        
        <Spinner 
            android:id="@+id/config_watch_level_spinner"
            android:layout_width="332dip"
            android:layout_height="65dip"
            android:layout_marginLeft="20dip"
            android:visibility="gone"
            android:drawSelectorOnTop="true"
            android:focusable="true"
            android:textColor="@color/text"
            android:popupBackground="#131723"
            android:dropDownVerticalOffset="1dip"
            android:textSize="30sp"
            android:spinnerMode="dropdown"
        />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="69dp"
        android:layout_marginTop="843dip"
        android:layout_marginLeft="125dp"
        android:orientation="horizontal"
        >
        <Button 
            android:layout_width="335dip"
            android:layout_height="fill_parent"
            android:textSize="40sp"
            android:text="@string/config_work_time_save_and_back"
            android:id="@+id/config_watch_level_save"
            />
        <Button 
            android:layout_width="335dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:textSize="40sp"
            android:id="@+id/config_watch_level_cancel"
            android:text="@string/config_modify_password_cancel"
            />
    </LinearLayout>

</RelativeLayout>
