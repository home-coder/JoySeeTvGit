<?xml version="1.0" encoding="utf-8"?>
<com.joysee.adtv.ui.MenuSettingSub xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
     <ImageView 
        android:id="@+id/menu_setting_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/menu_setting_back"
        android:focusable="false"
        android:layout_marginTop="10dp"/>
    <TextView 
        android:id="@+id/setting_sub"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
		android:textSize="28sp"  
		android:layout_marginLeft="60dp"  
		   
        />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="64dp"
        android:background="#33FFFFFF" />
    
    <ListView
            android:id="@+id/setting_menu_sub_list"
            android:layout_marginTop="65dp"
            android:background="#00000000"
            android:layout_marginRight="20dip"
            android:layout_width="650dp"
            android:focusable="true"
            android:dividerHeight="1dp"
            android:scrollbarThumbVertical="@drawable/scrollbar_front"
            android:scrollbarTrackVertical="@drawable/scrollbar_bg"
            android:cacheColorHint="#00000000"
            android:layout_height="811dip"
            android:listSelector="@drawable/dvb_menu_list_selector"
            android:layout_marginBottom="34dip"
            >
      </ListView>
      
     <ImageView
        android:id="@+id/subFocus"
        android:layout_width="650dp"
        android:layout_height="90dp"
        android:background="@drawable/focus"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        android:visibility="invisible" />

</com.joysee.adtv.ui.MenuSettingSub>