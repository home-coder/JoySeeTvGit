<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@android:id/background"
        android:drawable="@drawable/progress_background_mid">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@drawable/progress_background_right"
                android:startColor="@drawable/progress_background_left" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:drawable="@drawable/progress_mid">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@drawable/progress_right"
                android:startColor="@drawable/progress_image" />
        </shape>
    </item>

</layer-list>