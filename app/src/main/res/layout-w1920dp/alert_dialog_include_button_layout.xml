<?xml version="1.0" encoding="utf-8"?>
<!-- 搜索、预约公用的Dialog -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alert_dialog_no_button" >

    <TextView
        android:id="@+id/epg_alert_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/dvb_nochannel_notify_message"
        android:textColor="@color/search_main_text"
        android:textSize="33sp" />

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="260dip"
        android:layout_height="60dip"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="28dip"
        android:layout_marginLeft="100dip"
        android:gravity="center"
        android:text="@string/ok"
        android:textSize="28sp" />

    <Button
        android:id="@+id/cancle_btn"
        android:layout_width="260dip"
        android:layout_height="60dip"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="28dip"
        android:layout_marginRight="100dip"
        android:gravity="center"
        android:text="@string/alert_dialog_cancel"
        android:textSize="28sp" />

</FrameLayout>