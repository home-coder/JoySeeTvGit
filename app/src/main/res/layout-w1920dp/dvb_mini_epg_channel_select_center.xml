<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/channel_number"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="@color/mini_epg_center_text"
            android:textSize="46dp" />

        <TextView
            android:singleLine="true"
            android:id="@+id/channel_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/mini_epg_center_text"
            android:textSize="46dp" />

        <TextView
            android:id="@+id/channel_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="@color/mini_epg_center_text"
            android:textSize="46dp" />

        <TextView
            android:singleLine="true"
            android:id="@+id/channel_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textColor="@color/mini_epg_center_text"
            android:textSize="46dp" />

        <TextView
            android:id="@+id/channel_content_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textColor="@color/mini_epg_center_text"
            android:textSize="46dp" />
    </LinearLayout>

   <!--  <ProgressBar
        android:id="@+id/channel_progressbar"
        android:layout_width="891dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="6dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="235dp"
        android:progressDrawable="@drawable/play_progressbar"
        /> -->
        
      <ProgressBar
        android:id="@+id/channel_progressbar"
        android:layout_width="700dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="6dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="373dp"
        android:progressDrawable="@drawable/play_progressbar"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/next_channel_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="372dp"
            android:textColor="@color/mini_epg_text_white"
            android:textSize="46dp" />

        <TextView
            android:id="@+id/next_channel_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="@color/mini_epg_text_white"
            android:textSize="46dp" />

        <TextView
            android:id="@+id/next_channel_content_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="@color/mini_epg_text_white"
            android:textSize="46dp" />
    </LinearLayout>

</LinearLayout>