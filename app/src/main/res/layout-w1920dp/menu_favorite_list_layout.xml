<?xml version="1.0" encoding="utf-8"?>
<com.joysee.adtv.ui.MenuFavoriteList xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!--
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

             <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/menu_back" />
        -->

        <TextView
            android:id="@+id/menu_fav_back_textview"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginLeft="22dp"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/menu_back"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:text="@string/menu_fav_back"
            android:textColor="#787878"
            android:textSize="28sp" />
        <!-- </LinearLayout> -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:id="@+id/menu_fav_add_ll"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/menu_fav_add_text_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:src="@drawable/menu_fav_add_focus" />

            <TextView
                android:id="@+id/menu_fav_add_textview"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:background="@color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:textColor="@color/menu_text_unfocus"
                android:textSize="36sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <ListView
            android:id="@+id/favorites_list"
            android:layout_width="fill_parent"
            android:layout_height="800dp"
            android:layout_marginBottom="34dip"
            android:background="#00000000"
            android:cacheColorHint="#00000000"
            android:divider="#33FFFFFF"
            android:dividerHeight="1dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:listSelector="@color/transparent" >
        </ListView>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivFocus"
        android:layout_width="650dp"
        android:layout_height="90dp"
        android:background="@drawable/focus"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        android:visibility="invisible" />

</com.joysee.adtv.ui.MenuFavoriteList>