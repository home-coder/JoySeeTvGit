<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="1280dp"
    android:layout_height="720dp"
    android:background="@drawable/search_menu_bg"
    android:id="@+id/config_authorise_message_bg">
   <TextView
        android:id="@+id/ca_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/menu_back"
        android:drawablePadding="13dip"
        android:layout_marginTop="40dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="73dp"
        android:text="@string/ca_setting_title_text"
        android:textColor="@color/white_txt"
        android:textSize="23sp" />

    <TextView
        android:text="@string/ca_setting_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dip"
        android:gravity="center_vertical"
        android:layout_marginLeft="106dp"
        android:textColor="@color/grey_txt"
        android:textSize="20sp" 
            />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/config_authorise_op_layout"
        android:layout_marginTop="193dip"
        android:layout_marginLeft="106dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="23sp"
            android:text="@string/config_authorise_operate_id"
            />
         <TextView
            android:id="@+id/config_authorise_operate_edit"
            android:layout_width="333dip"
            android:layout_height="33dip"
            android:paddingLeft="26dp"
            android:paddingRight="6dp"
            android:layout_marginLeft="16dip"
            android:background="@drawable/search_et_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:numeric="integer"
            android:singleLine="true"
            android:drawableRight="@drawable/arrows_selector"
            android:textColor="@drawable/search_text_color"
            android:textSize="20sp"
             />
        <Spinner 
            android:id="@+id/config_authorise_spinner_id"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:drawSelectorOnTop="true"
            android:textColor="@color/text"
            android:dropDownSelector="@color/blue"
            android:popupBackground="#131723"
            android:dropDownVerticalOffset="1dip"
            android:visibility="gone"
            android:textSize="30sp"
            android:spinnerMode="dropdown"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="6dip"
        android:id="@+id/config_authorise_operate_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/config_authorise_op_layout"
        android:layout_below="@id/config_authorise_op_layout"
        android:singleLine="true"
        android:text="@string/config_authorise_operate_feature"
        android:textSize="23sp" />

    <LinearLayout 
        android:layout_width="1060dip"
        android:layout_height="40dip"
        android:layout_marginTop="33dip"
        android:id="@+id/config_authorise_title_layout"
        android:layout_below="@id/config_authorise_operate_feature"
        android:layout_alignLeft="@id/config_authorise_op_layout"
        android:gravity="center_vertical"
        android:background="#575757"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="366dp"
            android:paddingLeft="13dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/white_txt"
            android:id="@+id/config_auth_number"
            android:text="@string/config_authorise_program_number"
            />
        <TextView 
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/white_txt"
            android:id="@+id/config_auth_end"
            android:text="@string/config_authorise_end_time"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/white_txt"
            android:id="@+id/config_auth_record"
            android:text="@string/config_authorise_can_record"
            />
    </LinearLayout>
    
    <ListView
        android:id="@+id/config_authrise_listview"
        android:layout_width="1060dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/config_authorise_title_layout"
        android:layout_below="@id/config_authorise_title_layout"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="#2dffffff"
        android:dividerHeight="1dip"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:listSelector="@drawable/list_selector" >
    </ListView>

</RelativeLayout>
