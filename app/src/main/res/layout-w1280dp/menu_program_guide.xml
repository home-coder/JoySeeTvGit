<?xml version="1.0" encoding="utf-8"?>
<com.joysee.adtv.ui.MenuProgramGuide xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/progguide_menu_listview"
        android:layout_width="fill_parent"
        android:layout_height="449dp"
        android:background="@color/transparent"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/devide_line"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:listSelector="@drawable/list_selector" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"
            android:focusable="false"
            android:background="@drawable/left" />

        <!-- <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/right" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/channellist_guide"
            android:textColor="@color/white"
            android:textSize="27sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:focusable="false"
            android:background="@drawable/menu_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/exit_menu"
            android:textColor="@color/white"
            android:textSize="27sp" />
    </LinearLayout>

</com.joysee.adtv.ui.MenuProgramGuide>
