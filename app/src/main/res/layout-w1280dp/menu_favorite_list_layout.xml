<?xml version="1.0" encoding="utf-8"?>
<com.joysee.adtv.ui.MenuFavoriteList xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menu_fav_add_ll"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:nextFocusDown="@+id/favorites_list"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu_fav_add_text_icon"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="108dp"
            android:src="@drawable/menu_fav_add_focus" />

        <Button
            android:id="@+id/favorites_add_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <View
        android:id="@+id/divide_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <ListView
        android:id="@+id/favorites_list"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="fill_parent"
        android:layout_height="375dp"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="#33FFFFFF"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="55dp"
        android:focusable="false"
        android:focusableInTouchMode="false" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/menu_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="27sp" />

        <ImageView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="25dp"
            android:background="@drawable/menu_icon"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="10dp"
            android:text="@string/exit_menu"
            android:textColor="@color/white"
            android:textSize="27sp" />
    </LinearLayout>

</com.joysee.adtv.ui.MenuFavoriteList>