<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="630dp"
    android:layout_height="216dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/psd_dialog_bg"
    android:id="@+id/config_dialog_layout"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="21dip"
        android:layout_gravity="left"
        android:id="@+id/config_dialog_text"
        android:textSize="24sp"
        android:textColor="@color/white_txt"
        android:text="@string/config_work_time_input_passward"
        />
    <LinearLayout 
        android:layout_width="630dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
         android:layout_marginLeft="2dp">
	    <EditText 
	        android:layout_width="500dip"
	        android:layout_height="40dip"
	        android:paddingLeft="20dip"
	        android:layout_marginTop="35dip"
	        android:id="@+id/config_dialog_eidt"
	        android:inputType="numberPassword"
	        android:maxLength="6"
	        android:textSize="24sp"
	        android:background="@drawable/search_et_selector"
	        android:textColor="@color/green_txt"
	       />
	    
	       <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dip"
	        android:layout_marginTop="10dip"
	        android:singleLine="true"
	        android:drawableLeft="@drawable/ca_psd_wrong"
	        android:drawablePadding="6dp"
	        android:visibility="gone"
	        android:id="@+id/input_psd_wrong_txt"
	        android:textSize="22sp"
	        android:textColor="@color/green_txt"
	       
	        />
	 
    </LinearLayout>
    <LinearLayout 
        android:layout_width="655dp"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="1dp" >
	    <Button 
	        android:layout_width="175dip"
	        android:layout_height="40dip"
	        android:text="@string/email_dialog_positive_str"
	        android:textSize="24sp"
	        android:gravity="center"
	        android:id="@+id/config_dialog_btn_confirm"
	        />
	    <Button 
	        android:layout_width="175dip"
	        android:layout_height="40dip"
	        android:text="@string/config_modify_password_cancel"
	        android:layout_marginLeft="26dip"
	        android:textSize="24sp"
	        android:gravity="center"
	        android:id="@+id/config_dialog_btn_cancel"
	        />
    </LinearLayout>
</LinearLayout>
